<h1 class="text-3xl mb-4">Dashboard</h1>

<p><a href="/workouts" class="inline-block bg-dyelred2 p-2 rounded text-sm text-white hover:bg-red-700">View Workouts</a></p>

<section class="mt-4 grid md:grid-cols-2 sm:grid-cols-1 gap-4">
    <!-- number of workouts logged -->
    <div class="bg-white rounded drop-shadow-md border border-gray-200 p-2">
        <h2 class="text-lg">Workouts logged: <%= workoutCount %></h2>
    </div>

    <div class="bg-white rounded drop-shadow-md border border-gray-200 p-2">
        <h2 class="text-lg">Most recent workout: <%= workouts[0].date %></h2>
    </div>
</section>

