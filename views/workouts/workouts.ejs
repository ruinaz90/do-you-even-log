<%- include("../partials/header.ejs") %>
<%- include("../partials/nav.ejs") %>
<%- include("../partials/container.ejs") %>

<h1 class="text-3xl mb-4">Workouts</h1>

<nav class="flex gap-2 text-center">
<p><a href="/workouts/add" class="inline-block bg-dyelred2 px-4 py-2 mb-2 rounded-lg text-sm font-semibold text-white hover:bg-red-700">Add exercise</a></p>
<p><a href="/workouts/plate-calculator" class="inline-block bg-dyelred2 px-4 py-2 mb-2 rounded-lg text-sm font-semibold text-white hover:bg-red-700">Plate calculator</a></p>
<p><a href="/workouts/rest-timer" class="inline-block bg-dyelred2 px-4 py-2 mb-2 rounded-lg text-sm font-semibold text-white hover:bg-red-700">Rest timer</a></p>
</nav>

<section class="grid lg:grid-cols-3 sm:grid-cols-1 gap-4">
    <!-- loop through dates in exercise list -->
    <% for(let exercise of exercises) { %>
        <div class="bg-white rounded drop-shadow-md border border-gray-200 p-2">
            <!-- display date -->
            <h2 class="text-sm font-medium text-dyelred2"><%= exercise['_id'] %></h2>

            <!-- food items for each meal -->
            <% for(let exerciseItem of exercise['records']) { %>
                <h3 class="text-lg font-medium"><%= exerciseItem['exercise'] %></h3>
                <p class="text-sm text-gray-500 text-base whitespace-pre-line"><%= exerciseItem['description'] %> </p>
                    <p class="mt-1.5 mb-2"><a href="/workouts/edit/<%= exerciseItem['_id'] %>" class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold">Edit</a></p>
            <% } %> 
        </div>
    <% } %>  
</section>

<%- include("../partials/container-bottom.ejs") %>
<%- include("../partials/footer.ejs") %>